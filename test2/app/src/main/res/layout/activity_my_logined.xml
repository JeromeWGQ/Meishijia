<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_logined"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.test2.MyLoginedActivity">

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@mipmap/logined_head"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="23dp"
        android:id="@+id/imageView2"
        android:scaleType="centerInside"
        android:layout_width="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="你好"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="24sp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:text="江宝宝" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_upload"
        android:background="@mipmap/upload"
        android:layout_marginTop="57dp"
        android:onClick="uploadClicked"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <Button
        android:text="我的收藏"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_mystar"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button_mymenu"
        android:layout_alignParentStart="true" />

    <Button
        android:text="我的菜谱"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_mymenu"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/button_upload"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="设置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_mysetting"
        android:onClick="settingClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

    <Button
        android:text="修改个人信息"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/button_modify"
        android:layout_below="@+id/button_mystar"
        android:layout_alignParentStart="true"
        android:onClick="modifyClicked" />

</RelativeLayout>
