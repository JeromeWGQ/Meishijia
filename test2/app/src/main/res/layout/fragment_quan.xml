<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.test2.quanquan.QuanFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/bg_white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="260dp">
                <ImageView
                    android:id="@+id/img_quan_background"
                    android:layout_width="match_parent"
                    android:layout_height="240dp" />
                <ImageView
                    android:id="@+id/img_author_touxiang"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/img_author_touxiang"
                    android:layout_marginTop="190dp"
                    android:text="我是美食家"
                    android:textColor="@color/text_white"
                    android:textSize="20dp"/>
            </RelativeLayout>
            <ListView
                android:id="@+id/quan_listview"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/bg_white"
                android:divider="@color/div_white"
                android:dividerHeight="2px"/>
        </LinearLayout>

    </ScrollView>

</FrameLayout>
